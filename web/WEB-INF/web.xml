    <servlet>
        <servlet-name>WelcomeReader</servlet-name>
        <jsp-file>/WelcomeReader.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeReader</servlet-name>
        <url-pattern>/welcomeReader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WelcomeLibrarian</servlet-name>
        <jsp-file>/WelcomeLibrarian.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeLibrarian</servlet-name>
        <url-pattern>/welcomeLibrarian</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CatalogOfBooks</servlet-name>
        <jsp-file>/CatalogOfBooks.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogOfBooks</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OwingReaders</servlet-name>
        <jsp-file>/OwingReaders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>OwingReaders</servlet-name>
        <url-pattern>/owingReaders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Readers</servlet-name>
        <jsp-file>/Readers.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Readers</servlet-name>
        <url-pattern>/readers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CatalogOfBooksForReaders</servlet-name>
        <jsp-file>/CatalogOfBooksForReaders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogOfBooksForReaders</servlet-name>
        <url-pattern>/catalogOfBooksForReaders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BooksTakenByReader</servlet-name>
        <jsp-file>/BooksTakenByReader.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BooksTakenByReader</servlet-name>
        <url-pattern>/booksTakenByReader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.java.myrotiuk.controller.Controller</servlet-class>
        <init-param>
            <param-name>log4j-properties-location</param-name>
            <param-value>WEB-INF/classes/log4j.properties</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
